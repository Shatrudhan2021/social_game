<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">

  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <meta name="description" content="">
  <meta name="author" content="">
  <title>Dashboard</title>
  <!-- Custom fonts for this template-->
  <link href="vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
  <link
    href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
    rel="stylesheet">
  <!-- Custom styles for this template-->
  <link href="css/sb-admin-2.min.css" rel="stylesheet">
  <style>
    .main {
      width: 90%;
      margin: auto;
    }

    .topbar {
      justify-content: space-between !important;
    }

    .modal-dialog {
      max-width: 700px !important;
    }

    .colmns {
      margin: auto;
      width: 90%;
      display: flex;
      justify-content: space-between;
    }

    .colmns p {
      font-size: 1.4rem;
    }

    .cls_btn {
      width: 90%;
      margin: auto;
      justify-content: flex-end;
      display: flex;
    }

    .ttls {
      color: black;
      font-size: 2rem;
    }

    .modal-body {
      max-height: 550px;
      overflow-x: scroll;
    }

    .success,
    .fail {
      width: 6rem;
      font-size: 1rem;
    }

    .title {
      font-weight: 600;
      color: rgb(88 76 76);
      font-size: 1.4rem;
    }

    .ttl {
      margin: 1rem 0;
      font-weight: 700 !important;
      color: black;
    }

    .bottom {
      display: flex;
      justify-content: flex-end;
      width: 98%;
      margin: auto;
    }

    .tb_search {
      width: 20%;
      float: right;
    }

    .pagination-container {
      width: 70%;
      float: left;
    }

    .pagination li {
      color: black;
      text-align: center;
      background: white;
      width: 35px;
      padding: 0.5rem;
    }

    .active {
      background: #0d6efd !important;
      color: white !important;
    }
    ul.pagination li:hover {
    cursor: pointer;
}
  </style>
</head>

<body id="page-top">

  <!-- Page Wrapper -->
  <div id="wrapper">

    <!-- Sidebar -->


    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">

      <!-- Main Content -->
      <div id="content">

        <!-- Topbar -->
        <%- include('./partials/navbar.ejs'); %>


          <div class="col-md-12">
            <div class="row mb-4 topbar">
              <div class="col-2">
                <select class="form-control" name="state" id="maxRows">

                  <option value="10">10</option>
                  <option value="15">15</option>
                  <option value="20">20</option>
                  <option value="50">50</option>
                  <option value="70">70</option>
                  <option value="100">100</option>
                  <option value="5000">Show ALL Rows</option>
                </select>
              </div>

              <!-- <div class="col-8">
                        <div class="tb_search">
                          <input type="text" id="search_input_all" onkeyup="FilterkeyWord_all_table()" placeholder="Search.." class="form-control">
                        </div>
                      </div> -->



            </div>




            <div class="row">

              <div class="col-xl-12 col-md-6 mb-4 mx-auto">
                <div class="card border-left-success shadow h-100 py-2">
                  <div class="card-body">
                    <div class="row no-gutters align-items-center">
                      <div class="col mr-2 mb-4">

                        <div class="h5 mb-0 font-weight-bold text-gray-800"> User List</div>
                      </div>
                      <table class="table table-striped table-class" id="table-id">
                        <thead class="thead-dark">
                          <tr>

                            <th scope="col">First Name</th>
                            <th scope="col">Last Name</th>
                            <th scope="col">Email</th>
                            <th scope="col">Moves Count</th>
                            <th scope="col">Play Time (s)</th>
                            <th scope="col">Win Status</th>
                            <th scope="col">Details</th>


                          </tr>
                        </thead>
                        <tbody>
                          <% data.forEach(function(item , key) { %>
                            <tr>
                              <% if(item.first_name){ %>
                                <td>
                                  <%= item.first_name %>
                                </td>
                                <% } else { %>
                                  <td> Not Given</td>
                                  <% } %>


                                    <% if(item.last_name){ %>
                                      <td>
                                        <%= item.last_name %>
                                      </td>
                                      <% } else { %>
                                        <td> Not Given</td>
                                        <% } %>

                                          <% if(item.email){ %>
                                            <td>
                                              <%= item.email %>
                                            </td>
                                            <% } else { %>
                                              <td> Not Given</td>
                                              <% } %>


                                                <% if(item.movescount){ %>
                                                  <td>
                                                    <%= item.movescount %>
                                                  </td>
                                                  <% } else { %>
                                                    <td> Not Given</td>
                                                    <% } %>



                                                      <% if(item.playtime){ %>
                                                        <td>
                                                          <%= item.playtime %>
                                                        </td>
                                                        <% } else { %>
                                                          <td> Not Given</td>
                                                          <% } %>

                                                            <% if(item.iswinner){ %>
                                                              <td><span
                                                                  class="badge badge-success success">Success</span>
                                                              </td>
                                                              <% } else { %>
                                                                <td> <span class="badge badge-danger fail">Fail</span>
                                                                </td>

                                                                <% } %>
                              <td>
                                <%= item.createdAt %>
                              </td>
                              <td>
                                <button type="button" class="btn btn-info clickBtn"
                                  data-userId="<%= item._id %>">View More</button>
                              </td> 
                            </tr>


                            <% }); %>


                        </tbody>

                      </table>
                    </div>
                  </div>
                </div>
              </div>
              <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
                aria-hidden="true">
                <div class="modal-dialog" role="document">
                  <div class="modal-content">
                    <div class="modal-header">
                      <h5 class="modal-title" id="exampleModalLabel">Details</h5>

                    </div>
                    <div class="modal-body">

                      <div class="row">
                        <p class="col-6 font-weight-bold">First Name </p>
                        <p class="col-6 first_name"></p>
                      </div>
                      <div class="row">
                        <p class="col-6 font-weight-bold">Last Name </p>
                        <p class="col-6 last_name"></p>
                      </div>
                      <div class="row">
                        <p class="col-6 font-weight-bold">Email </p>
                        <p class="col-6 user_email"></p>
                      </div>
                      <div class="row">
                        <p class="col-6 font-weight-bold">Address</p>
                        <p class="col-6 user_address"></p>
                      </div>
                      <div class="row">
                        <p class="col-6 font-weight-bold">City</p>
                        <p class="col-6 user_city"></p>
                      </div>
                      <div class="row">
                        <p class="col-6 font-weight-bold">ZipCode</p>
                        <p class="col-6 zipcode"></p>
                      </div>
                      <div class="row">
                        <p class="col-6 font-weight-bold">Win Status</p>
                        <p class="col-6 winstatus"></p>
                      </div>
                      <div class="row">
                        <p class="col-6 font-weight-bold">Moves Count</p>
                        <p class="move_count"></p>
                      </div>
                      <div class="row">
                        <p class="col-6 font-weight-bold">Play Time </p>
                        <p class="col-6 playtime"></p>
                      </div>
                      <div class="row">
                        <p class="col-6">Subscribe News Letter</p>
                        <p class="col-6 subscribe_news"></p>
                      </div>
                      <div class="row">
                        <p class="col-6 visited">Visited From</p>
                        <p class="col-6 visitsite"></p>
                      </div>

                      <h4 class="ttl">Animal details</h4>

                      <div class="row">
                        <p class="col-6 font-weight-bold">Animal Name </p>
                        <p class="col-6 animalname"></p>
                      </div>

                      <div class="row">
                        <p class="col-6 font-weight-bold"> Age </p>
                        <p class="col-6 animalage"></p>
                      </div>

                      <div class="row">
                        <p class="col-6 font-weight-bold">Cat</p>
                        <p class="col-6 iscat"></p>
                      </div>
                      <div class="row">
                        <p class="col-6 font-weight-bold">Dog</p>
                        <p class="col-6 isdog"></p>
                      </div>

                      <div class="row">
                        <p class="col-6 font-weight-bold">Iskitten IsPuppy </p>
                        <p class="col-6 iskitten"></p>
                      </div>
                      <div class="row">
                        <p class="col-6 font-weight-bold">Animal Weight </p>
                        <p class="col-6 weight"></p>
                      </div>
                      <div class="row">
                        <p class="col-6 font-weight-bold">Prize Details </p>
                        <p class="col-6 prizedeatil"></p>
                      </div>



                    </div>
                    <div class="cls_btn">
                      <button type="button" class="btn btn-secondary my-4" data-dismiss="modal">Close</button>

                    </div>

                  </div>
                </div>
              </div>


            </div>

            <div class='pagination-container'>
              <nav>
                <ul class="pagination">
                </ul>
              </nav>
            </div>

          </div>
      </div>
    </div>
  </div>
  </div>

  <a class="scroll-to-top rounded" href="#page-top">
    <i class="fas fa-angle-up"></i>
  </a>


  <!-- Logout Modal-->
  <div class="modal fade" id="logoutModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Ready to Leave?</h5>
          <button class="close" type="button" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">×</span>
          </button>
        </div>
        <div class="modal-body">Select "Logout" below if you are ready to end your current session.</div>
        <div class="modal-footer">
          <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancel</button>
          <a class="btn btn-primary" href="login.html">Logout</a>
        </div>
      </div>
    </div>
  </div>
  <script src="vendor/jquery/jquery.min.js"></script>
  <link href="https://cdn.datatables.net/1.11.1/css/jquery.dataTables.min.css">
  <!-- <script src="js/datatables.js"></script> -->
  <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
  <script src="vendor/jquery-easing/jquery.easing.min.js"></script>

  <script src="js/sb-admin-2.min.js"></script>
  <script src="js/dashboard.js"></script>
  <script src="js/pagination.js"></script>
</body>

</html>